@model SportProductApp.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-box-open me-2"></i>
                        Chi tiết sản phẩm
                    </h2>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImagePro))
                            {
                                <img src="@Model.ImagePro" class="img-fluid rounded shadow" alt="@Model.NamePro" />
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center shadow" style="height: 200px;">
                                    <i class="fas fa-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th scope="row" class="text-primary">
                                            <i class="fas fa-tag me-2"></i>Mã sản phẩm:
                                        </th>
                                        <td><strong>@Model.ProductID</strong></td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="text-primary">
                                            <i class="fas fa-shopping-bag me-2"></i>Tên sản phẩm:
                                        </th>
                                        <td>@Model.NamePro</td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="text-primary">
                                            <i class="fas fa-list me-2"></i>Loại sản phẩm:
                                        </th>
                                        <td>
                                            <span class="badge bg-secondary">@Model.Category</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="text-primary">
                                            <i class="fas fa-dollar-sign me-2"></i>Giá:
                                        </th>
                                        <td>
                                            <span class="text-success fw-bold">@Model.Price?.ToString("N0") VNĐ</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="text-primary">
                                            <i class="fas fa-calendar me-2"></i>Ngày sản xuất:
                                        </th>
                                        <td>@Model.ManufacturingDate.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                </tbody>
                            </table>
                            
                            @if (!string.IsNullOrEmpty(Model.DecriptionPro))
                            {
                                <div class="mt-3">
                                    <h5 class="text-primary">
                                        <i class="fas fa-info-circle me-2"></i>Mô tả:
                                    </h5>
                                    <p class="text-muted">@Model.DecriptionPro</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>